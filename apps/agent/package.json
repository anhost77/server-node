{
    "name": "@server-flow/agent",
    "version": "0.1.50",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc && npm run copy-templates",
        "copy-templates": "node -e \"const fs=require('fs');const path=require('path');function copyDir(s,d){fs.mkdirSync(d,{recursive:true});fs.readdirSync(s,{withFileTypes:true}).forEach(e=>{const sp=path.join(s,e.name),dp=path.join(d,e.name);e.isDirectory()?copyDir(sp,dp):fs.copyFileSync(sp,dp)})};copyDir('src/infrastructure/templates','dist/infrastructure/templates')\"",
        "start": "node dist/index.js"
    },
    "dependencies": {
        "fastify": "^4.26.1",
        "@fastify/websocket": "^9.0.0",
        "ws": "^8.16.0",
        "pm2": "^5.3.1",
        "@server-flow/shared": "workspace:*"
    },
    "devDependencies": {
        "typescript": "^5.3.3",
        "tsx": "^4.7.1",
        "@types/node": "^20.11.19",
        "@types/ws": "^8.5.10"
    }
}